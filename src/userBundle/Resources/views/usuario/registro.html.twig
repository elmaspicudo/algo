{% extends '::base_pagina.html.twig' %}

{% block slider %}
<div id="price" class="section secondary-section">
<div class="container">
    <div class="row-fluid">
        <div class="col-xs-12" style="height: 20px;">    
        </div>
    </div>
    <div class="row form-group">
        <div class="col-xs-12">
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="disabled"><a href="#step-1">
                    <h4 class="list-group-item-heading">Paso 1</h4>
                    <p class="list-group-item-text">Resumen de tu pedido</p>
                </a></li>
                <li class="active"><a href="#step-2">
                    <h4 class="list-group-item-heading">Paso 2</h4>
                    <p class="list-group-item-text">Iniciar Sesion</p>
                </a></li>
                <li class="disabled"><a href="#step-3">
                    <h4 class="list-group-item-heading">Paso 3</h4>
                    <p class="list-group-item-text">Direccion de facturacion</p>
                </a></li>
                <li class="disabled"><a href="#step-3">
                    <h4 class="list-group-item-heading">Paso 4</h4>
                    <p class="list-group-item-text">Pagar</p>
                </a></li>
            </ul>
        </div>
    </div>

<div class="row-fluid">
            <div class="span4 ">
                <div class="member-box">
                <h2>Iniciar sesion</h2>
                {% if formlogin is defined %} 
                    {% if error %}
                        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
                    {% endif %}

                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <input type="password" id="password" name="_password" required="required" />

                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>

                            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                        </form>
                    {% else %}
                        {{ render(controller( 'FOSUserBundle:Security:login' )) }} 
                    {% endif %}
                </div>
            </div>
            <div class="span4">
                <div class="member-box">

                   <h2>Registro</h2>
                   {% if form is defined %} 
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                            {{ form_widget(form) }}
                            <div>
                                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
                            </div>
                        </form>
                   {% else %}
                       {{ render(controller( 'FOSUserBundle:Registration:register' )) }} 
                   {% endif %}
                </div>
            </div>     
</div>      

</div>
</div>
{% endblock  %}
