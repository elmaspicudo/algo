{% extends '::base.html.twig' %}

{% block body -%}
    <h1>balanza list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cuenta</th>
                <th>Saldoinicial</th>
                <th>Debe</th>
                <th>Haber</th>
                <th>Saldofinal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('balanza_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cuenta }}</td>
                <td>{{ entity.saldoInicial }}</td>
                <td>{{ entity.debe }}</td>
                <td>{{ entity.haber }}</td>
                <td>{{ entity.saldoFinal }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('balanza_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('balanza_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('balanza_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
