{% block grid %}
<div class="row-fluid">
    <div class="box span12">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon user"></i><span class="break"></span>cliente</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                
            </div>
        </div>
        <div class="box-content">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Version</th>
                        <th>Rfc</th>
                        <th>Totalcuentas</th>
                        <th>Mes</th>
                        <th>Año</th>
                        <th>Actions</th>
                    </tr>
                </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('balanzas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.version }}</td>
                <td>{{ entity.rfc }}</td>
                <td>{{ entity.totalCuentas }}</td>
                <td>{{ entity.mes }}</td>
                <td>{{ entity.año }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('balanzas_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('balanzas_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('balanzas_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
